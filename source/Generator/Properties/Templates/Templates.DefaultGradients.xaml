	<LinearGradientBrush x:Key="grad_HeaderedContentControl_Content" EndPoint="0.5,1" StartPoint="0.5,0">
		<GradientStop Color="{DynamicResource ColorHeaderDark}"/>
		<GradientStop Color="{DynamicResource ColorHeaderLight}" Offset="1"/>
	</LinearGradientBrush>
	<LinearGradientBrush x:Key="grad_HeaderedContentControl_Content_Valid" EndPoint="0.5,1" StartPoint="0.5,0">
		<GradientStop Color="{DynamicResource {x:Static SystemColors.HighlightColorKey}}"/>
		<GradientStop Color="{DynamicResource ColorHeaderLight}" Offset="1"/>
	</LinearGradientBrush>
	<LinearGradientBrush x:Key="grad_HeaderedContentControl_Content_InvalidFocused" EndPoint="0.5,1" StartPoint="0.5,0">
		<GradientStop Color="{DynamicResource ColorHeaderLightInvalid}"/>
		<GradientStop Color="{DynamicResource color_HeaderFocused_Light}" Offset="1"/>
		<GradientStop Color="{DynamicResource color_HeaderFocused_Middle}" Offset="0.541"/>
	</LinearGradientBrush>
	<LinearGradientBrush x:Key="grad_HeaderedContentControl_Content_InvalidUnfocused" EndPoint="0.5,1" StartPoint="0.5,0">
		<GradientStop Color="{DynamicResource ColorHeaderDark}"/>
		<GradientStop Color="{DynamicResource ColorHeaderLightInvalid}" Offset="1"/>
	</LinearGradientBrush>
